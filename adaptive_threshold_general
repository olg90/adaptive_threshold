f=100
pr=0.1
M=100
k=100
c=0.005
tauv=1
tauvth=1

n=0 # occupied states
v=0

vthb=0.2
vth=vthb

# alpha = 0  constant jumps
# cvth = 0  fixed threshold

cvth=0.1
alpha=1
cv=vthb #0.1

delta_t = 0.001
tmax = 20 # <-------------- TMAX

xlist=np.linspace(0.01, 100, 100)

Tlist=[]
Clist=[]
alist=[0,1,2]
navgs=1
for i in range(len(alist)):
    print(i)
    Tsim, Csim =gettaca(cvth, alist[i], navgs, xlist)        
    Teq=tmeantaux(tauv, c, xlist, k, M, pr, cvth, vthb, i)
    Ceq=cvttaux(c, xlist, k, M, pr, tauv, cvth, vthb, i)
    Tlist.append([Tsim, Teq])
    Clist.append([Csim, Ceq])
    
fig, ax = plt.subplots(2,1, figsize=(4,3.5))
ax[0].set_ylabel('Output\nfrequency (Hz)')
for i in range(len(alist)):
    ax[0].plot(xlist, 1/Tlist[i][0], label='sim {}'.format(alist[i]))
    ax[0].plot(xlist, 1/Tlist[i][1], label='eq {}'.format(alist[i]))
ax[0].set_xticks([])
# =============================================================================
# ax[0].set_ylim([0, 1])
# =============================================================================
ax[0].legend()
for i in range(len(alist)):
    ax[1].plot(xlist, Clist[i][0], label='sim {}'.format(alist[i]))
    ax[1].plot(xlist, Clist[i][1], label='eq {}'.format(alist[i]))
# =============================================================================
# ax[1].set_ylim([0,1])
# =============================================================================
ax[1].set_xlabel('Input Frequency (Hz)')
ax[1].set_ylabel('Coefficient of\nvariation squared')
ax[1].legend()
plt.show()

