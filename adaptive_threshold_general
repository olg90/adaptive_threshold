(2.*(k + f*pr)*vthb**2*(c*f*k*M*pr*tauv - (k + f*pr)*vthb)))*\
(-4 + pr*(3 - 2*M*(1 + f*(-6 + pr)*tauv)) + \
(c*f*k*M*pr*tauv*(-4 + pr*(3 + 2*M*(-1 + f*(-6 + pr)*tauv)))*\
(c*f*k*kx*M*pr*tauv + (k + f*pr)*(vthb**2 +\
Sqrt((c**2*f**2*k**2*kx**2*M**2*pr**2*tauv**2)/(k + f*pr)**2 - (2*c*f*k*kx*M*pr*tauv*vthb**2)/(k + f*pr) +\
vthb**3*(4*kx + vthb)))))/(2.*(k + f*pr)*vthb**2*(c*f*k*M*pr*tauv - (k + f*pr)*vthb))) -\
f**2*(-2 + pr)*pr**2*(-1 + f**2*pr**2*tauv**2)*\
(-1 + (c**2*f**2*k**2*M**2*pr**2*tauv**2*\
(c*f*k*kx*M*pr*tauv + (k + f*pr)*(vthb**2 + \
Sqrt((c**2*f**2*k**2*kx**2*M**2*pr**2*tauv**2)/(k + f*pr)**2 - (2*c*f*k*kx*M*pr*tauv*vthb**2)/(k + f*pr) +\
vthb**3*(4*kx + vthb))))**2)/(4.*(k + f*pr)**2*vthb**4*(c*f*k*M*pr*tauv - (k + f*pr)*vthb)**2)) + \
f*k*pr*(4 + pr*(-3 + 2*M + 4*f*(-1 + M)*(-1 + pr)*tauv + f**2*(-4 + pr)*pr*tauv**2 - 2*f**3*M*(-2 + pr)*pr**2*tauv**3) +\
(2*c*f**2*k*M**2*(-2 + pr)*pr**2*tauv**2*(-1 + f**2*pr**2*tauv**2)*\
(c*f*k*kx*M*pr*tauv + (k + f*pr)*(vthb**2 + \
Sqrt((c**2*f**2*k**2*kx**2*M**2*pr**2*tauv**2)/(k + f*pr)**2 - (2*c*f*k*kx*M*pr*tauv*vthb**2)/(k + f*pr) +\
 vthb**3*(4*kx + vthb)))))/((k + f*pr)*vthb**2*(c*f*k*M*pr*tauv - (k + f*pr)*vthb)) -\
 (c**2*f**2*k**2*M**2*pr**2*tauv**2*(4 + \
 pr*(-3 + 2*M - 4*f*(-1 + M)*(-1 + pr)*tauv + f**2*(-4 + pr)*pr*tauv**2 + 2*f**3*M*(-2 + pr)*pr**2*tauv**3))*\
 (c*f*k*kx*M*pr*tauv + (k + f*pr)*(vthb**2 + \
 Sqrt((c**2*f**2*k**2*kx**2*M**2*pr**2*tauv**2)/(k + f*pr)**2 - (2*c*f*k*kx*M*pr*tauv*vthb**2)/(k + f*pr) +\
  vthb**3*(4*kx + vthb))))**2)/(4.*(k + f*pr)**2*vthb**4*(c*f*k*M*pr*tauv - (k + f*pr)*vthb)**2) -\
   2**(1 + k*tauv + f*pr*tauv)*f*pr*(2 + (-2 + M)*pr)*tauv*\
   ((c*f*k*M*pr*tauv*(c*f*k*kx*M*pr*tauv + \
   (k + f*pr)*(vthb**2 + Sqrt((c**2*f**2*k**2*kx**2*M**2*pr**2*tauv**2)/(k + f*pr)**2 -\
   (2*c*f*k*kx*M*pr*tauv*vthb**2)/(k + f*pr) + vthb**3*(4*kx + vthb)))))/\
   ((k + f*pr)*vthb**2*(c*f*k*M*pr*tauv - (k + f*pr)*vthb)))**(1 - k*tauv - f*pr*tauv)) +\
   k**2*(2 + pr*(2*(-1 + M) + 4*f*(-1 + M)*(-1 + pr)*tauv + f**2*(-4 + pr)*pr*tauv**2 - 4*f**3*M*(-3 + pr)*pr**2*tauv**3) + \
   (4*c*f**2*k*M**2*pr**2*tauv**2*(1 + f**2*(-3 + pr)*pr**2*tauv**2)*\
   (c*f*k*kx*M*pr*tauv + (k + f*pr)*(vthb**2 + \
   Sqrt((c**2*f**2*k**2*kx**2*M**2*pr**2*tauv**2)/(k + f*pr)**2 - (2*c*f*k*kx*M*pr*tauv*vthb**2)/(k + f*pr) + \
   vthb**3*(4*kx + vthb)))))/((k + f*pr)*vthb**2*(c*f*k*M*pr*tauv - (k + f*pr)*vthb)) - \
   (c**2*f**2*k**2*M**2*pr**2*tauv**2*(2 +\
   pr*(-2 + f*tauv*(-4 + pr*(4 + f*(-4 + pr)*tauv)) + 2*M*(1 + 2*f*tauv*(1 + pr*(-1 + f**2*(-3 + pr)*pr*tauv**2)))))*\
   (c*f*k*kx*M*pr*tauv + (k + f*pr)*(vthb**2 + \
   Sqrt((c**2*f**2*k**2*kx**2*M**2*pr**2*tauv**2)/(k + f*pr)**2 - (2*c*f*k*kx*M*pr*tauv*vthb**2)/(k + f*pr) +\
   vthb**3*(4*kx + vthb))))**2)/(4.*(k + f*pr)**2*vthb**4*(c*f*k*M*pr*tauv - (k + f*pr)*vthb)**2) - \
   2**(2 + k*tauv + f*pr*tauv)*f*pr*(1 + (-1 + M)*pr)*tauv*\
   ((c*f*k*M*pr*tauv*(c*f*k*kx*M*pr*tauv + \
   (k + f*pr)*(vthb**2 + Sqrt((c**2*f**2*k**2*kx**2*M**2*pr**2*tauv**2)/(k + f*pr)**2 -\
   (2*c*f*k*kx*M*pr*tauv*vthb**2)/(k + f*pr) + vthb**3*(4*kx + vthb)))))/\
   ((k + f*pr)*vthb**2*(c*f*k*M*pr*tauv - (k + f*pr)*vthb)))**(1 - k*tauv - f*pr*tauv))))/\
   (f*k*M*pr*(2*k - f*(-2 + pr)*pr)*tauv*(-1 + k*tauv + f*pr*tauv)*(1 + k*tauv + f*pr*tauv)*\
   (c*f*k*kx*M*pr*tauv + (k + f*pr)*(vthb**2 + \
   Sqrt((c**2*f**2*k**2*kx**2*M**2*pr**2*tauv**2)/(k + f*pr)**2 - (2*c*f*k*kx*M*pr*tauv*vthb**2)/(k + f*pr) +\
   vthb**3*(4*kx + vthb))))**2)))/\
   ((c*f*k*M*pr*tauv - (k + f*pr)*vthb)**2*(Log(2) - Log((c*f*k*M*pr*tauv*\
   (c*f*k*kx*M*pr*tauv + (k + f*pr)*(vthb**2 + \
   Sqrt((c**2*f**2*k**2*kx**2*M**2*pr**2*tauv**2)/(k + f*pr)**2 - (2*c*f*k*kx*M*pr*tauv*vthb**2)/(k + f*pr) + \
   vthb**3*(4*kx + vthb)))))/((k + f*pr)*vthb**2*(c*f*k*M*pr*tauv - (k + f*pr)*vthb))))**2)    
